{
  "name": "rcm",
  "version": "0.1.0",
  "description": "A collection of React Components",
  "keywords": [
    "react",
    "component",
    "boilerplate",
    "ui",
    "system",
    "css-modules",
    "styleguide",
    "snapshot"
  ],
  "author": {
    "name": "Pascal Duez",
    "url": "https://github.com/pascalduez"
  },
  "homepage": "https://github.com/pascalduez/rcm",
  "bugs": "https://github.com/pascalduez/rcm/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/pascalduez/rcm.git"
  },
  "license": "Unlicense",
  "files": [
    "dist",
    "index.js",
    "README.md",
    "UNLICENSE"
  ],
  "main": "dist/cjsm/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint src/",
    "lint": "run-s lint:*",
    "typecheck": "flow check src/",
    "typecheck:coverage": "flow-coverage-report -t text -t html -i 'src/**/*.js' -x 'src/**/*.{spec,story}.js'",
    "validate": "run-s lint typecheck",
    "test": "BABEL_ENV=cssm jest",
    "test:cover": "run-s 'test -- --coverage'",
    "test:ci": "NODE_ENV=ci run-s validate 'test -- --coverage --runInBand --no-watchman'",
    "pretest:ci": "rm -rf reports/",
    "styleguide": "start-storybook -p 9001 -c .storybook",
    "clean": "rm -r dist/ coverage/ reports/ flow-coverage/",
    "build:js:esm": "BABEL_ENV=esm,cssm babel src/ -d dist/esm --ignore '*.spec.js,*.story.js'",
    "build:js:cjsm": "babel dist/esm -d dist/cjsm",
    "build:js": "run-s build:js:*",
    "build:flow": "flow-copy-source -v -i '**/*.{story,spec}.js' src/ dist/cjsm",
    "build:css:global": "BABEL_ENV=cssm,globalcss babel src/ > /dev/null",
    "concat:css": "./scripts/concat-styles.js",
    "build": "run-s build:** concat:**",
    "prebuild": "rm -rf dist/",
    "prepublishOnly": "run-s validate test:cover build"
  },
  "babel": {
    "presets": [
      "./babel.config.js"
    ]
  },
  "jest-junit": {
    "suiteName": "rcm unit tests",
    "output": "./reports/junit-report.xml"
  },
  "jest-html-reporter": {
    "pageTitle": "rcm unit tests",
    "outputPath": "./reports/output-report.html"
  },
  "dependencies": {
    "popper.js": "^1.12.6"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.13",
    "@storybook/addon-info": "^3.2.13",
    "@storybook/addon-knobs": "^3.2.13",
    "@storybook/addon-options": "^3.2.13",
    "@storybook/react": "^3.2.13",
    "autoprefixer": "^7.1.4",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-css-modules": "^2.7.5",
    "eslint-plugin-flowtype": "^2.37.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.57.3",
    "flow-copy-source": "^1.2.1",
    "flow-coverage-report": "^0.3.0",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "jest-html-reporter": "^0.5.1",
    "jest-junit": "^3.1.0",
    "multistream": "^2.1.0",
    "npm-run-all": "^4.1.1",
    "postcss": "^6.0.12",
    "postcss-custom-properties": "^6.1.0",
    "postcss-loader": "^2.0.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "string-to-stream": "^1.1.0",
    "stylelint": "^8.1.1",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-standard": "^17.0.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.5.4"
  }
}
